          <div class="asset-card" data-asset="area-dashed-square" onclick="selectAsset(this, 'area-dashed-square')" style="padding: 6px;">
            <div class="asset-preview" style="position: relative; width: 100%; height: 30px; display: flex; align-items: center; justify-content: center;">
              <div style="width: 18px; height: 18px; background: rgba(218, 160, 176, 0.3); border: 2px dashed #DAA0B0;"></div>
            </div>
            <div class="asset-label" style="font-size: 8px; margin-top: 2px;">Dashed □</div>
          </div>
          <div class="asset-card" data-asset="area-solid-circle" onclick="selectAsset(this, 'area-solid-circle')" style="padding: 6px;">
            <div class="asset-preview" style="position: relative; width: 100%; height: 30px; display: flex; align-items: center; justify-content: center;">
              <div style="width: 18px; height: 18px; border-radius: 50%; background: #DAA0B0;"></div>
            </div>
            <div class="asset-label" style="font-size: 8px; margin-top: 2px;">Solid ●</div>
          </div>
          <div class="asset-card" data-asset="area-solid-square" onclick="selectAsset(this, 'area-solid-square')" style="padding: 6px;">
            <div class="asset-preview" style="position: relative; width: 100%; height: 30px; display: flex; align-items: center; justify-content: center;">
              <div style="width: 18px; height: 18px; background: #DAA0B0;"></div>
            </div>
            <div class="asset-label" style="font-size: 8px; margin-top: 2px;">Solid ■</div>
