      <!-- APOIO Section -->
      <div class="assets-section">
        <div class="assets-section-title">APOIO</div>

        <!-- Number Pointers (4 directions) - Orientação correta como pointer de texto -->
        <div class="assets-grid" style="grid-template-columns: repeat(4, 1fr); gap: 6px;">
          <div class="asset-card" data-asset="number-top" onclick="selectAsset(this, 'number-top')" style="padding: 6px;">
            <div class="asset-preview" style="position: relative; width: 100%; height: 30px; display: flex; flex-direction: column; align-items: center; justify-content: flex-start;">
              <div style="width: 16px; height: 16px; border-radius: 50%; background: #FCFC30; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 10px; color: #000;">1</div>
              <div style="width: 1px; height: 10px; background: #FCFC30; margin-top: 1px;"></div>
            </div>
            <div class="asset-label" style="font-size: 8px; margin-top: 2px;">Top</div>
          </div>
          <div class="asset-card" data-asset="number-bottom" onclick="selectAsset(this, 'number-bottom')" style="padding: 6px;">
            <div class="asset-preview" style="position: relative; width: 100%; height: 30px; display: flex; flex-direction: column; align-items: center; justify-content: flex-end;">
              <div style="width: 1px; height: 10px; background: #FCFC30; margin-bottom: 1px;"></div>
              <div style="width: 16px; height: 16px; border-radius: 50%; background: #FCFC30; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 10px; color: #000;">1</div>
            </div>
            <div class="asset-label" style="font-size: 8px; margin-top: 2px;">Bottom</div>
          </div>
          <div class="asset-card" data-asset="number-left" onclick="selectAsset(this, 'number-left')" style="padding: 6px;">
            <div class="asset-preview" style="position: relative; width: 100%; height: 30px; display: flex; align-items: center; justify-content: flex-start;">
              <div style="width: 16px; height: 16px; border-radius: 50%; background: #FCFC30; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 10px; color: #000;">1</div>
              <div style="width: 10px; height: 1px; background: #FCFC30; margin-left: 1px;"></div>
            </div>
            <div class="asset-label" style="font-size: 8px; margin-top: 2px;">Left</div>
          </div>
          <div class="asset-card" data-asset="number-right" onclick="selectAsset(this, 'number-right')" style="padding: 6px;">
            <div class="asset-preview" style="position: relative; width: 100%; height: 30px; display: flex; align-items: center; justify-content: flex-end;">
              <div style="width: 10px; height: 1px; background: #FCFC30; margin-right: 1px;"></div>
              <div style="width: 16px; height: 16px; border-radius: 50%; background: #FCFC30; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 10px; color: #000;">1</div>
